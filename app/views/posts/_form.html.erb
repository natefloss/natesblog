<%= csrf_meta_tags %>
              <%= form_for @post do |f| %>
                <% if @post.errors.any? %>
                <h2><%= pluralize(@post.errors.count, "error") %> prevented frm saving </h2>
                <ul>
                  <% @post.errors.full_messages.each do |msg| %>
                     <li><%= msg %></li>
                   <% end %>
                 </ul>
                 <% end %>

                 <%= f.label :title %>

                 <%= f.text_field :title %>

                 <%= f.label :content, "Write Post" %>
                 <%= f.text_area :content, placeholder: "Enter your post", class: "text-area w-input" %>

                 <br>
                 <br>
                 <%= f.submit %>

                 <% end %>
            </div>
          
